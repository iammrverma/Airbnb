<% layout("/layouts/boilerplate")%>
<body>
  <div class="listings-grid">
    <%for (listing of listings){%>
    <a href="/listings/<%=listing._id%>">
      <div class="card">
        <div class="image"><img src="<%=listing.image.url%>" class="card-img-top" alt="..." /></div>
        
        <div class="card-body">
          <h6><%=listing.title%></h6>
          <p class="card-text">
            &#8377; <%= listing.price.toLocaleString("en-IN") %>/Night
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</body>
