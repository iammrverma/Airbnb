<% layout("/layouts/boilerplate")%>
<style>
  #filters {
    display: flex;
    gap: .5rem;
    max-width: 100%;
    overflow-x: scroll;
    flex-wrap: nowrap;
    scrollbar-width: none;
    -ms-overflow-style: none;

    &::-webkit-scrollbar{
      display: none;
    }

    flex-wrap: nowrap;

    & .filter {
      text-align: center;
      opacity: 0.7;
      padding: 0 .5rem;
      border-bottom: 2px solid transparent;
      & div {
        font-size: 1.5em;
      }
      & p {
        font-size: 0.8rem;
      }
      &:hover {
        opacity: 1;
        cursor: pointer;
        border-bottom-color: grey;
      }
    }
  }
</style>
<body>
  <div id="filters">
    <div class="filter">
      <div class=""><i class="fa-solid fa-fire-flame-curved"></i></div>
      <p>Trending</p>
    </div>

    <div class="filter">
      <div class=""><i class="fa-solid fa-person-swimming"></i></div>
      <p class="">Pool</p>
    </div>

    <div class="filter">
      <div class=""><i class="fa-solid fa-wheat-awn"></i></div>
      <p class="">Farm</p>
    </div>

    <div class="filter">
      <div class=""><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Amazing View</p>
    </div>

    <div class="filter">
      <div class=""><i class="fa-solid fa-tree"></i></div>
      <p>Garden</p>
    </div>
    <div class="filter">
      <div class=""><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </div>
    <div class="filter">
      <div class=""><i class="fa-solid fa-mountain"></i></div>
      <p>Mountain</p>
    </div>
    <div class="filter">
      <div class=""><i class="fa-solid fa-bowl-rice"></i></div>
      <p>Brilliant Food</p>
    </div>
    <div class="filter">
      <div class=""><i class="fa-solid fa-tower-observation"></i></div>
      <p>Tower</p>
    </div>
    <div class="filter">
      <div class=""><i class="fa-solid fa-cloud-showers-water"></i></div>
      <p>Monsoon Vibe</p>
    </div>
    <div class="filter">
      <div class=""><i class="fa-solid fa-van-shuttle"></i></div>
      <p>Mobile House</p>
    </div>
  </div>
  <div class="listings-grid">
    <%for (listing of listings){%>
    <a href="/listings/<%=listing._id%>">
      <div class="card">
        <div class="image">
          <img src="<%=listing.image.url%>" class="card-img-top" alt="..." />
        </div>

        <div class="card-body">
          <h6><%=listing.title%></h6>
          <p class="card-text">
            &#8377; <%= listing.price.toLocaleString("en-IN") %>/Night
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</body>
