<% layout("/layouts/boilerplate")%><%=success%>
<div class="row">
  <div class="col-10 offset-1">
    <form
      action="/signup"
      method="post"
      class="needs-validation"
      id="signupForm"
      novalidate
    >
    <h1>Signup</h1>

      <div class="form-group">
        <lable for="username" class="form-lable">Username</lable>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter username first</div>
      </div>

      <div class="form-group">
        <lable for="email" class="form-lable">Email</lable>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter email first</div>
      </div>

      <div class="form-group">
        <lable for="password" class="form-lable">Password</lable>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter password first</div>
      </div>

      <button class="btn btn-dark">Login</button>
    </form>
  </div>
</div>
